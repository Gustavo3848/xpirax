<div class="row" id="formlink">
    <form action="/admin/adicionarlink/<%=item._id%>" method="POST">
        <div style="margin-bottom: 10px;">
            <label class="col-4"for="descricao">Descrição</label>
            <input class="col-7"type="text"required="true" id="descricao" name="descricao"style="width:">
        </div>
        <div style="margin-bottom: 10px;">
            <label class="col-4"for="linkDownload">Link Download</label>
            <input class="col-7"type="text" required="true" id="linkDownload" name="linkDownload">
        </div>
        <div>
            <button type="submit">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
              </svg>
            </button>
        </div>
    </form>
</div>
<div>
    <table>
        <tr>
            <th class="col-4">Link</th>
            <th class="col-8">Descrição</th>
            <th class="col">Remover</th>
        </tr>
        <% links.forEach(link => { %>
            <tr>
                
                <td class="text-truncate" style="max-width:150px;min-width: 150px;"><%=link.link%></td>
                <td class="text-truncate" style="max-width:200px;min-width: 200px;"><%=link.descricao%></td>
                <td><a href="/admin/removerlink/<%=item._id%>/<%=link._id%>"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash"
                    viewBox="0 0 16 16">
                    <path
                        d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                    <path fill-rule="evenodd"
                        d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                </svg></a>
                </td>
            </tr>
        <% }) %>
        
    </table>   
</div>
<style>
    tr,td,th,table{
        border: 1px solid black;
        margin: 10px;
        text-align: center;
    }
    #formlink{
        margin: 10px;
    }
    
</style>