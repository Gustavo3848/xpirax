<div class="card">
<div class="container">

    <div class="row">    
        <div class="col">
            <img style="max-width: auto;width: 150px;max-height: auto;margin: 10px;"
                src="<%=item.linkimg%>">
        </div>
        <div class="col-5">
            <div style="vertical-align: auto; margin: 10px;">
                <form action="/admin/editar/linkimg/<%=item._id%>" method="POST">
                    <label class="col-3" for="link">Link imagem</label>
                <input class="col-7" type="text" name="dado" id=""
                    value="<%=item.linkimg%>">
                    <button class="col-1" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-square" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                        <path d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.235.235 0 0 1 .02-.022z"/>
                      </svg></button>
                </form>
            </div>
            <div style="vertical-align: auto; margin: 10px;">
                <form action="/admin/editar/titulo/<%=item._id%>" method="POST">
                    <label  class="col-3"for="titulo">Titulo</label>
                    <input class="col-7" type="text" name="dado" required=true value="<%=item.titulo%>">
                    <button class="col-1" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-square" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                        <path d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.235.235 0 0 1 .02-.022z"/>
                      </svg></button>
                </form>
                
            </div>
            <div style="vertical-align: auto; margin: 10px;">
                <form action="/admin/editar/sinopse/<%=item._id%>"method="POST">
                    <label class="col-3"for="sinopse">Sinopse</label>
                <textarea  class="col-7" name="dado" style="max-height: 150px; height: 100px;" cols="30"
                    rows="10"><%=item.sinopse%></textarea>
                    <button class="col-1" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-square" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                        <path d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.235.235 0 0 1 .02-.022z"/>
                      </svg></button>    
                </form>
            </div>
            <div style="vertical-align: auto; margin: 10px;">
                <form action="/admin/editar/categoria/<%=item._id%>"method="POST">
                    <label class="col-3" for="categoria">Categoria</label>
                <select class="col-7"  name="dado" id="">
                    <option value="<%=item.categoria._id%>" selected><%=item.categoria.categoria%></option>
                    <% categorias.forEach(categoria => { %>
                        <option value="<%= categoria._id %>"><%= categoria.categoria %></option>
                    <% }) %>
                    
                </select>
                <button class="col-1" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                    <path d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.235.235 0 0 1 .02-.022z"/>
                  </svg></button>   
                </form>
            </div>
            <div style="vertical-align: auto; margin: 10px;">
                <form action="/admin/editar/dataLancamento/<%=item._id%>" method="POST">
                    <label  class="col-3"for="data">Data de lan√ßamento</label>
                    <input  class="col-7" type="date" name="dado" value="<%=item.dataAdd%>">
                    <button class="col-1" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-square" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                        <path d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.235.235 0 0 1 .02-.022z"/>
                      </svg></button> 
                </form>
                
            </div>
            
        </div>
        <div class="col-5" style="position:-ms-page;">
            <%- include ('../partials/link.ejs') %>
        </div>
    </div>
</div>

</div>
